
@{
    ViewBag.Title = "UpdateUser";
}

<h2>Add User</h2>
<br />
@using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Post))
{
<div class="container">
    <div class="form-group">
        <h3>Email:</h3>
        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required value="@ViewBag.User.UserName">
    </div>

    <div class="form-group">
        <h3>Display Name:</h3>
        <input type="text" class="form-control" id="dName" placeholder="Enter email" name="dName" required value="@ViewBag.User.DisplayName">
    </div>

    <h3>User Type</h3>
    @Html.DropDownList("utype", new SelectList(ViewBag.roles, "Id", "Description", ViewBag.User.UserLevel), new { @class = "form-control", name = "utype" })

    <br />

    <h3>Percent Type</h3>
    @Html.DropDownList("ptype", new SelectList(ViewBag.percents, "ID", "Name", ViewBag.User.Percents), new { @class = "form-control", name = "ptype" })

    <br />

    <div class="form-group">
        <h3>Peek Mileage:</h3>
        <input type="number" class="form-control" id="pkMile" placeholder="Enter peek mileage" name="pkMile" required value="@ViewBag.User.PeekMileage">
    </div>

    <h3>Active</h3>
    <div class="btn-group btn-group-vertical" data-toggle="buttons">
        <label class="btn active">
            <input type="checkbox" name='active' checked="@ViewBag.User.Active"><i class="fa fa-square-o fa-2x"></i><i class="fa fa-check-square-o fa-2x"></i> <span> Active</span>
        </label>
    </div>

    <br />

    <button type="submit" class="btn btn-danger">Submit</button>

</div>
}

@section Scripts{
    <script>
        $(function () {
            var element = document.getElementById("ActiveCoach");
            element.classList.add("active");
        });
    </script>    
}