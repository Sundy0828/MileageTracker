
@{
    ViewBag.Title = "Week";
}

<h2>@ViewBag.user.DisplayName's Week</h2>

<table class="table table-dark table-hover table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Distance</th>
            <th>Type</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var day in ViewBag.Days)
        {
            <tr>
                <td>@day.Date.ToString("dddd, dd MMMM")</td>
                <td>@day.Distance</td>
                <td>@day.RunType1.Description</td>
                <td>@day.Notes</td>
            </tr>
        }
        </tbody>
</table>

