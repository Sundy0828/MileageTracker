
@{
    ViewBag.Title = "Add User";
}

<h2>Users</h2>


<br />

<table class="table table-dark table-hover table-bordered">
    <thead>
        <tr>
            <th>UserName</th>
            <th><button type="button" class="btn btn-danger" onclick="add()">Add User</button></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td><button type="button" class="btn btn-warning" onclick="edit(@user.ID)">Edit User</button></td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function add() {
            window.location = '/Admin/AddUser';
        }
        function edit(id) {
            window.location = '/Admin/AddUser?id='+id;
        }
    </script>
}