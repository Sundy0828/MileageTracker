
@{
    ViewBag.Title = "What To Run";
}

<h2>What To Run</h2>

<br />

<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Meet</th>
                <th>Mileage</th>
                <th>Long Run</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var whatToRun in ViewBag.weekRunPlan)
            {
                <tr>
                    <td>@whatToRun.dateStart.ToString("MMMM dd") - @whatToRun.dateEnd.ToString("MMMM dd")</td>
                    <td>
                        @foreach (var meet in whatToRun.meets)
                        {
                            @meet.MeetName; <br />
                        }
                    </td>
                    <td>@whatToRun.totMileage</td>
                    <td>@whatToRun.longRun</td>
                    <td><button type="button" class="btn btn-warning" onclick="Week(@whatToRun.totMileage)">Mileage for Week</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

    @section Scripts{
        <script>
            function Week(mileage) {
                window.location = '/Athlete/WeeklyMileage?mileage=' + mileage;
            }

            $(function () {
                var element = document.getElementById("ActiveAth");
                element.classList.add("active");
            });
        </script>
    }
