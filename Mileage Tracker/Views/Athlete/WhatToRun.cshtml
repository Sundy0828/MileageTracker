
@{
    ViewBag.Title = "What To Run";
}

<h2>What To Run</h2>

<br />

<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Meet</th>
                <th>Mileage</th>
                <th>Long Run</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < ViewBag.records; i++)
            {
                <tr>
                    @{ var weekTot = ViewBag.User.PeekMileage * ViewBag.percent[i];}
                    <td>@ViewBag.weeks[i].ToString("MMMM dd") - @ViewBag.weeks[i].AddDays(6).ToString("MMMM dd")</td>
                    <td></td>
                    <td>@Math.Round(weekTot)</td>
                    <td>@Math.Round((weekTot * 0.2))</td>
                    <td><button type="button" class="btn btn-warning" onclick="Week(@Math.Round(weekTot))">Mileage for Week</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

    @section Scripts{
        <script>
            function Week(mileage) {
                window.location = '/Athlete/WeeklyMileage?mileage=' + mileage;
            }

            $(function () {
                var element = document.getElementById("ActiveAth");
                element.classList.add("active");
            });
        </script>
    }
