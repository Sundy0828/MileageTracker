
@{
    ViewBag.Title = "Calendar";
}

<h2>Calendar</h2>

<div id='calendar'></div>


@section scripts{
    <script>
        $(function () {
            // page is now ready, initialize the calendar...
            $('#calendar').fullCalendar({
                header:
                {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                buttonText: {
                    today: 'today',
                    month: 'month',
                    week: 'week',
                    day: 'day'
                }, 
                events: "/Calendar/GetEvents/",
                dayClick: function () {
                    alert('a day has been clicked!');
                }
            });
        });
    </script>
}

